{
  "name": "@sethgho/glint",
  "version": "0.3.0",
  "description": "Express emotional status on IoT displays via eyes & eyebrows",
  "type": "module",
  "bin": {
    "glint": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "assets/",
    "scripts/patch-deps.sh",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sethgho/glint.git"
  },
  "homepage": "https://github.com/sethgho/glint",
  "keywords": ["tidbyt", "display", "emotions", "eyes", "iot", "ai-agent", "status"],
  "author": "Seth Gholson",
  "license": "MIT",
  "scripts": {
    "postinstall": "bash scripts/patch-deps.sh",
    "build": "bun build src/cli.ts --outdir dist --target node --external @resvg/resvg-js",
    "build:binary": "bun build src/cli.ts --compile --outfile glint",
    "build:binary:all": "bash scripts/build-all.sh",
    "dev": "bun run src/cli.ts",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@xmldom/xmldom": "^0.8.11",
    "commander": "^14.0.3",
    "gif-encoder-2": "^1.0.5",
    "pngjs": "^7.0.0"
  }
}
